@model View.ViewModels.ResolucaoViewModel

@{
    ViewBag.Title = "Correção da Tarefa " + Model.IdTarefa;
}

<h2>Correção da Tarefa @Model.IdTarefa</h2>

<hr />
<div class="row">
    
        @Html.HiddenFor(m => m.IdTarefa)
        @for (var i = 0; i < Model.Questoes.Count; i++)
        {
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">

                        <h5>@(i + 1)) @Html.Label($"Questoes[i].Pergunta", Model.Questoes[i].Pergunta)</h5>

                        <span>Resposta: </span>
                        <span>
                            @Model.Questoes[i].Resposta
                        </span>


                    </div>
                    <div class="form-group">

                        <label>Comentário</label>
                        <span>@Model.Questoes[i].Comentario</span>

                    </div>
                    <hr />
                </div>
            </div>
        }
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label>Nota</label>
                    <span>@Model.Nota</span>
                </div>
            </div>
        </div>
        @Html.ActionLink("Voltar", "Index", null, new {@class="btn btn-default"})
    
</div>